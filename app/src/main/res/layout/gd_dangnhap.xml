<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="50dp"
        android:textColor="@color/mauden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DANH BẠ NỘI BỘ DTHU"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:background="@drawable/logokonen"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_tai_khoan"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:maxLines="1"
        android:lines="1"
        android:layout_height="wrap_content"
        android:hint="Nhập tên đăng nhập" />

    <EditText
        android:id="@+id/edt_mat_khau"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:lines="1"
        android:hint="Nhập mật khẩu"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:id="@+id/btn_dangnhap"
            android:text="Đăng nhập"
            android:background="@color/maucam"
            android:textColor="@color/mautrang"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_dangky"
            android:text="Đăng ký"
            android:layout_marginLeft="20sp"
            android:background="@color/maucam"
            android:textColor="@color/mautrang"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>

</LinearLayout>
