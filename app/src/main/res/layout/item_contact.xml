<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_margin="16dp"
        android:layout_width="90dp"
        android:layout_height="90dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_contact_name"
            android:textColor="@color/maucam"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mai Quốc Việt" />
        <TextView
            android:id="@+id/tv_ct_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nam" />
        <TextView
            android:id="@+id/tv_ct_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0912321" />
        <TextView
            android:id="@+id/tv_ct_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="giuseqviet@gmail.com" />

        <TextView
            android:id="@+id/tv_ct_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đồng tháp" />

    </LinearLayout>

</LinearLayout>